{
    "name": "Comment Eraser",
    "description": "Remove distracting comments from common websites",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.youtube.com/*"
            ],
            "css": [
                "content_scripts/youtube/override.css"
            ],
            "js": [
                "content_scripts/youtube/override.js"
            ]
        }
    ]
}